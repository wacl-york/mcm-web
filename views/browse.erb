<h1>Select a primary VOC</h1>

<br>
<br>
<div class='row justify-content-center'>
  <ul class='list-group row d-flex align-items-start'>
  <li class='list-group-item active align-items-start col-4' aria-current='true'>
    Sections
  </li>
  <% @categories.each do |category, values| %>
    <li class='list-group-item d-flex justify-content-between align-items-start col-4'>
      <a href='<%= "/browse\##{link_from_category(category)}"%>' >
        <%= category %>
      </a>
      <span class='badge bg-primary rounded-pill'>
        <%= values.size %>
      </span>
    </li>
  <% end %>
  </ul>
</div>

<br>
<br>


<% @categories.each do |category, values| %>
  <a name='<%= "#{link_from_category(category)}" %>'>
    <h4><%= category%></h4>
  </a>
  <ul>
  <% values.each do |species| %>
    <li>
      <form method="post" action="/add_marklist/<%= species[0] %>">
        <a href='<%= "/species/#{species[0]}"%>'>
          <%= species[1] %>
        </a>
        <input class="btn btn-primary btn-sm" type="submit" value="+"/>
        </form>
    </li>
  <% end %>
  </ul>
<% end %>
