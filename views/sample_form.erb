<h1>A Sample Form</h1>

<%== erb :"partials/input_error" %>

<form id="sample-form" method="post" action="<%= rel '/sample-form' %>" novalidate>

  <div class="mb-3">
    <label for="name" class="form-label">Event Name <small class="text-info">(required)</small></label>
    <input type="text" class="form-control <%= 'is-invalid' if form_error? :name %>" name="name" id="name" required value="<%= form_value :name %>">
    <div class="invalid-feedback">
      Please provide an event name.
    </div>
  </div>

  <div class="mb-3">
    <label for="day" class="form-label">Date <small class="text-info">(required)</small></label>
    <div class="input-group" id="date-picker">
      <input type="text" class="form-control <%= 'is-invalid' if form_error? :day %>" name="day" id="day"
             value="<%= form_value :day %>" autocomplete="off" required data-input />
      <div class="input-group-text" data-toggle><span class="fa fa-calendar"></span></div>
    </div>
  </div>

  <% content_for :javascript_footer do %>
    <script>
        flatpickr('#date-picker');
    </script>
  <% end %>

  <button type="submit" class="btn btn-primary">
    Submit Sample Form
  </button>

</form>

<% erb :"partials/validate_form_script", locals: {:form => 'sample-form' } %>
