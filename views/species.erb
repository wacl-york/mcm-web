<h1><%= @species[:Name] %></h1>
<form method="post" action="/add_marklist/<%= @species[:Name] %>">
  <input class="btn btn-primary" type="submit" value="Add to Mark list"/>
</form>
<br>
<br>

<div class="card">
  <div class="card-header">
    Species information
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Smiles: <%= @species[:Smiles] %></li>
    <li class="list-group-item">InChI: <%= @species[:Inchi] %></li>
    <li class="list-group-item">Mass: <%= @species[:Mass] %></li>
  </ul>
</div>

<br>

<h3 class="rxn-title">Sink Reactions</h2>
<% @sink_rxns.each do |reaction| %>
  <div class='row rxn-row'>
    <div class='col-sm-3'><%= parse_multiple_species(reaction[:Reactants], @species[:Name]) %></div>
    <div class='col-sm-4'><%= parse_rate(reaction[:Rate]) %></div>
    <div class='col-sm-3'><%= parse_multiple_species(reaction[:Products], @species[:Name]) %></div>
  </div>
<% end %>

<h3 class="rxn-title">Precursor Reactions</h2>
<% @precursor_rxns.each do |reaction| %>
  <div class='row rxn-row'>
    <div class='col-sm-3'><%= parse_multiple_species(reaction[:Reactants], @species[:Name]) %></div>
    <div class='col-sm-4'><%= parse_rate(reaction[:Rate]) %></div>
    <div class='col-sm-3'><%= parse_multiple_species(reaction[:Products], @species[:Name]) %></div>
  </div>
<% end %>
