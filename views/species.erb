<h1>Species</h1>

<form method="get">
  <!--<div class="form-group"> -->
    <label for="n_reactions">Number species to display</label>
    <input type="text" name="n" value=<%= @n_species %>>
    <input type="submit" value="Refresh">
    <!--</div>-->
</form>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @species.each do |species| %>
    <tr>
      <td><a href="species_info/<%= species[:Name]%>"><%= species[:Name] %></td>
    </tr>
  <% end %>
  </tbody>
</table>
