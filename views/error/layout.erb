<% messages << error if (error.to_s != error.class.to_s) %>

<div class="p-5 mb-4 bg-light rounded-3">
  <div class="container-fluid py-5">
    <h1 class="display-5 fw-bold"><%= title %></h1>
    <% messages.compact.each do |message, index| %>
    <p class="fs-4 <%= 'mb-2' unless index == messages.size - 1 %>">
      <%= message %>
    </p>
    <% end %>
    <p>
      Error code: <%= error.http_status %>
    </p>
  </div>
</div>
